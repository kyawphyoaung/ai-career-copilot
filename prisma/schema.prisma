// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ApplicationStatus {
  APPLIED
  INTERVIEWING
  OFFER
  REJECTED
}

model UserProfile {
  id           Int           @id @default(autoincrement())
  name         String
  phone        String
  email        String        @unique
  linkedinUrl  String
  githubUrl    String
  education    Json
  leadership   Json
  masterSkills Json
  applications Application[]
}

model Application {
  id                       Int               @id @default(autoincrement())
  companyName              String
  jobTitle                 String
  appliedAt                DateTime          @default(now())
  
  country                  String
  source                   String
  contactEmail             String?
  followUp                 Boolean           @default(false)
  skillMatchPercentage     Float?
  
  status                   ApplicationStatus @default(APPLIED)
  statusUpdatedAt          DateTime?         @updatedAt // Automatically update on change
  
  jobDescription           String            @db.Text
  
  generatedCvJson          Json
  cvPdfFilename            String
  cvThemeUsed              String

  generatedCoverLetterJson Json?
  cvCoverLetterPdfFilename String?

  // <<<<<<< Follow-up System အတွက် Field အသစ်များ >>>>>>>>>
  followUpDate             DateTime?         // Date to remind for follow-up
  followUpCompleted        Boolean           @default(false) // Track if follow-up action is done

  requiredSkills           String[]          @default([])
  missingSkills            String[]          @default([])

  userProfile   UserProfile @relation(fields: [userProfileId], references: [id])
  userProfileId Int
}